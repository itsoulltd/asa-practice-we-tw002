{
	"name": "PL_Activity_Execution_Flow",
	"properties": {
		"description": "Impact of On Success/On Completion/On Fail when transition from one activity to another activity.",
		"activities": [
			{
				"name": "Lookup_Synapse_Environment",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"dataset": {
						"referenceName": "Json_Metadata",
						"type": "DatasetReference",
						"parameters": {
							"Container": "metadata",
							"Filename": "Json_Metadata.json"
						}
					}
				}
			},
			{
				"name": "Fail-Type-A",
				"type": "Fail",
				"dependsOn": [
					{
						"activity": "Lookup_Synapse_Environment",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"message": "Reason-A",
					"errorCode": "101"
				}
			},
			{
				"name": "Fail-Type-B",
				"type": "Fail",
				"dependsOn": [
					{
						"activity": "Lookup_Synapse_Environment",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"message": "Reason-B",
					"errorCode": "102"
				}
			},
			{
				"name": "Wait-30Sec",
				"type": "Wait",
				"dependsOn": [
					{
						"activity": "Lookup_Synapse_Environment",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"waitTimeInSeconds": 30
				}
			},
			{
				"name": "Wait-On-Completion",
				"type": "Wait",
				"dependsOn": [
					{
						"activity": "Fail-Type-A",
						"dependencyConditions": [
							"Completed"
						]
					},
					{
						"activity": "Wait-30Sec",
						"dependencyConditions": [
							"Completed"
						]
					},
					{
						"activity": "Wait-50Sec",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"waitTimeInSeconds": 1
				}
			},
			{
				"name": "Wait-On-Success",
				"type": "Wait",
				"dependsOn": [
					{
						"activity": "Fail-Type-B",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"waitTimeInSeconds": 1
				}
			},
			{
				"name": "Wait-50Sec",
				"type": "Wait",
				"dependsOn": [
					{
						"activity": "Lookup_Synapse_Environment",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"waitTimeInSeconds": 50
				}
			}
		],
		"folder": {
			"name": "Source to Bronze/PDW"
		},
		"annotations": []
	}
}